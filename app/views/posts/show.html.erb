 <div class="row">
   <div class="columns large-4">
 
   </div>
   <div class="columns large-8">
     <%= link_to 'Edit', edit_post_path, class: "button" %>
     <%= link_to 'Delete', post_path, class: "button alert", method: :delete %>
   </div>
 </div>
 <div class="row">
   <div class="columns large-4">
     <div class="row">
       <div class="columns large-8 text-right">

        <p><%= link_to @post.user.username, user_path(id: @post.user.username) %><br>
           <%= time_ago_in_words(@post.created_at) %></p>
       </div>
       <div class="columns large-4">
         <p><%= image_tag @post.user.profile.url(:thumb) %></p>
       </div>
     </div>
     <div class="row">
       <div class="columns large-12 text-right">
         <p><%= @post.user.location %></p>
       </div>
     </div>
   </div>
   <div class="columns large-8">
     <p><%= image_tag(@post.avatar.url) %></p>
     <p><%= @post.description %></p>
   </div>
 </div>