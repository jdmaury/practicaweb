<h1>Listing posts</h1>

<%= link_to 'New Post', new_post_path, class: "button" %>

<% @posts.each do |post| %>
<hr>
<div class="row">
  <div class="columns large-4">
    <div class="row">
      <div class="columns large-8 text-right">
        <p><%= link_to post.user.username, post.user %><br>
          <%= time_ago_in_words(post.created_at) %></p>
      </div>
      <div class="columns large-4">
       <p><%= image_tag(post.user.profile.url(:thumb)) %></p>
      </div>
      
    </div>
    <div class="row">
      <div class="columns large-8 text-right">
        <p><%= post.user.location %></p>
      </div>
    </div>
  </div>
  <div class="columns large-8">
    <p><%= link_to image_tag(post.avatar.url :medium), post %></p>
    <p><%= post.description %></p>
  </div>
</div>

<% end %>



